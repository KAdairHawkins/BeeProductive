<script src="https://use.fontawesome.com/edc8a1b9d1.js"></script>
<link rel="stylesheet" href="/public/Assets/css/bootstrap-social.css">
<section id="contact" class="content-section text-center my-5">
    <!--comment here to force a rebuild-->
        <div class="contact-section">
            <div class="container py-2" id="contactForm">
              <h2>Contact Us</h2>
              <p>Questions? Comments? Fill out the contact form or hit us up on social media.</p>
              <div class="row">
                <div class="col-md-2">
                </div>
                <div class="col-md-8 col-md-offset-2">
                  <form class="form-horizontal" action="/sendmessage" method="POST">
                    <div class="form-group">
                      <label for="nameInput">Name</label>
                      <input type="text" class="form-control" name="name" placeholder="Jane Doe">
                    </div>
                    <div class="form-group">
                      <label for="emailInput">Email</label>
                      <input type="email" class="form-control" name="email" placeholder="jane.doe@example.com">
                    </div>
                    <div class="form-group ">
                      <label for="messageInput">Your Message</label>
                     <textarea class="form-control" placeholder="Description" name="message"></textarea> 
                    </div>
                    <button type="submit" class="btn btn-default">Send Message</button>
                  </form>

                  <hr>
                    <a href="#" class="btn btn-social-icon btn-lg btn-twitter mb-2"><i class="fa fa-twitter"></i></a>
                    <a href="#" class="btn btn-social-icon btn-lg btn-facebook mx-5 mb-2"><i class="fa fa-facebook"></i></a>
                    <a href="#" class="btn btn-social-icon btn-lg btn-github mb-2"><i class="fa fa-github"></i></a>
                
                  
                </div>
              </div>
            </div>
        </div>
      </section>